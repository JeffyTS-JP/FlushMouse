<Window
	x:Class="FlushMouseUI3DLL.Settings"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:FlushMouseUI3DLL"
	xmlns:media="using:Microsoft.UI.Xaml.Media"
	xmlns:mc="d"
	Title = "FlushMouseUI3 設定"
	Closed="Window_Closed"
	>
	
	<Grid Loading="Settings_Loading" Loaded="Settings_Loaded" Background="{ThemeResource SystemControlChromeHighAcrylicWindowMediumBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="12"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="0">
		</StackPanel>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="230"/>
					<ColumnDefinition Width="420"/>
				</Grid.ColumnDefinitions>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0">
					<TextBlock Margin="42,16,0,0" Text="IME モードの取得方法"/>
					<TextBlock Margin="42,20,0,0" Text="マウスカーソルのサイズ"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1">
					<ComboBox  Margin="6,12,0,0" Width="412" x:Name="Combo1" Loaded="Combo1_Loaded" SelectionChanged="Combo1_SelectionChanged"  Header="" SelectedIndex="1">
						<ComboBoxItem Name="Item1">フォーカスウィンドウの IME モードを表示する</ComboBoxItem>
						<ComboBoxItem Name="Item2">マウスカーソル下のウィンドウの IME モードを表示する</ComboBoxItem>
					</ComboBox>
					<Slider Margin="10,3,10,0" Width="400" x:Name="sl1" ValueChanged="Slider_ValueChanged"
						Minimum="8" Maximum="80" StepFrequency="1" SmallChange="1" Value="32" TickFrequency="8" TickPlacement="Outside" SnapsTo="StepValues"/>
				</StackPanel>
			</Grid>
		</StackPanel>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="2">
			<Grid>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top">
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts1" Toggled="HandleToggleSwitch" OffContent="マウスカーソルの右下に IME モードを表示しない" OnContent="マウスカーソルの右下に IME モードを表示する" IsOn="False"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts2" Toggled="HandleToggleSwitch" OffContent="フォーカスを取得したウィンドウの IMEを強制的に OFFにしない" OnContent="フォーカスを取得したウィンドウの IMEを強制的に OFFにする" IsOn="False"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts3" Toggled="HandleToggleSwitch" OffContent="IME ON時のモードを「全角ひらがな」のみにしない" OnContent="IME ON時のモードを「全角ひらがな」のみにする" IsOn="False"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts4" Toggled="HandleToggleSwitch" OffContent="IME 関連キーをクリックしたときに IME モードを表示しない" OnContent="IME 関連キーをクリックしたときに IME モードを表示する" IsOn="False"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts5" Toggled="HandleToggleSwitch" OffContent="マウスの左ボタンをクリックしたときに IME モードを表示しない" OnContent="マウスの左ボタンをクリックしたときに IME モードを表示する" IsOn="False"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts6" Toggled="HandleToggleSwitch" OffContent="Ctrlキーを離したときに IME モードを表示しない" OnContent="Ctrlキーを離したときに IME モードを表示する" IsOn="False"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts7" Toggled="HandleToggleSwitch" OffContent="IME モードをキャレットの左に表示しない" OnContent="IME モードをできるだけキャレットの左に表示する" IsOn="False"/>
					<TextBlock Margin="92,0,0,0" Text="(キャレット位置を判定できない場合はマウスカーソル左に表示します)"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts8" Toggled="HandleToggleSwitch" OffContent="IME 関連キーのサポート機能を無効にする" OnContent="IME 関連キーのサポート機能を有効にする" IsOn="False"/>
					<ToggleSwitch Margin="42,6,0,0" x:Name="ts9" Toggled="HandleToggleSwitch" OffContent="ExplorerPatcher Simple Window Switcher Helperを無効にする" OnContent="ExplorerPatcher Simple Window Switcher Helperを有効にする" IsOn="False"/>
				</StackPanel>
			</Grid>
		</StackPanel>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="3">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="230"/>
					<ColumnDefinition Width="420"/>
				</Grid.ColumnDefinitions>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0">
					<TextBlock Margin="42,12,0,0" Text="IME モード表示のサイズ"/>
					<TextBlock Margin="42,12,0,0" Text="IME モード表示の時間"/>
					<TextBlock Margin="42,12,0,0" Text="IME モード表示までの時間"/>
					<TextBlock Margin="42,8,0,0" Text="Ctrlキーを離してからIME&#10;モードを表示するまでの時間"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1">
					<Slider Margin="10,6,10,0" Width="400" x:Name="sl2" ValueChanged="Slider_ValueChanged"
						Minimum="8" Maximum="80" StepFrequency="1" SmallChange="1" Value="24" TickFrequency="8" TickPlacement="Outside" SnapsTo="StepValues"/>
					<Slider Margin="10,0,10,0" Width="400" x:Name="sl3" ValueChanged="Slider_ValueChanged"
						Minimum="1" Maximum="100" StepFrequency="1" SmallChange="1" Value="40" TickFrequency="10" TickPlacement="Outside" SnapsTo="StepValues"/>
					<Slider Margin="10,0,10,0" Width="400" x:Name="sl4" ValueChanged="Slider_ValueChanged"
						Minimum="1" Maximum="100" StepFrequency="1" SmallChange="1" Value="30" TickFrequency="10" TickPlacement="Outside" SnapsTo="StepValues"/>
					<Slider Margin="10,4,10,0" Width="400" x:Name="sl5" ValueChanged="Slider_ValueChanged"
						Minimum="1" Maximum="100" StepFrequency="1" SmallChange="1" Value="40" TickFrequency="10" TickPlacement="Outside" SnapsTo="StepValues"/>
				</StackPanel>
			</Grid>
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
				<TextBlock Margin="42,12,0,0" Text="マウスカーソルの左の表示色"/>
				<Button Margin="10,7,0,0" x:Name="NearMouse" FontFamily="Yu Gothic UI" FontWeight="Bold" Background="White" Content="あ" Click="ColorButton_Click">
					<FlyoutBase.AttachedFlyout>
						<Flyout x:Name="flyout1">
							<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
								<ColorPicker x:Name="myColorPicker1"
												Color="White"
												ColorSpectrumShape="Ring"
												IsMoreButtonVisible="False"
												IsColorSliderVisible="True"
												IsColorChannelTextInputVisible="False"
												IsHexInputVisible="False"
												IsAlphaEnabled="True"
												IsAlphaSliderVisible="True"
												IsAlphaTextInputVisible="False" />
								<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
									<Button  Margin="0,0,10,10" Width="75" x:Name="CP_Button1" Click="Button_Click" FontSize="10" Style="{StaticResource AccentButtonStyle}" Content="OK" />
									<Button  Margin="0,0,10,10" Width="75" x:Name="CP_Button2" Click="Button_Click" FontSize="10" Style="{StaticResource AccentButtonStyle}" Content="キャンセル" />
								</StackPanel>

							</StackPanel>
						</Flyout>
					</FlyoutBase.AttachedFlyout>
				</Button>
				<TextBlock Margin="100,12,0,0" Text="キャレットの左の表示色"/>
				<Button Margin="10,7,0,0" x:Name="NearCaret" FontFamily="Yu Gothic UI" FontWeight="Bold" Background="White" Content="あ" Click="ColorButton_Click">
					<FlyoutBase.AttachedFlyout>
						<Flyout x:Name="flyout2">
							<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
								<ColorPicker x:Name="myColorPicker2"
												Color="White"
												ColorSpectrumShape="Ring"
												IsMoreButtonVisible="False"
												IsColorSliderVisible="True"
												IsColorChannelTextInputVisible="False"
												IsHexInputVisible="False"
												IsAlphaEnabled="True"
												IsAlphaSliderVisible="True"
												IsAlphaTextInputVisible="False" />
								<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
									<Button  Margin="0,0,10,10" Width="75" x:Name="CP_Button3" Click="Button_Click" FontSize="10" Style="{StaticResource AccentButtonStyle}" Content="OK" />
									<Button  Margin="0,0,10,10" Width="75" x:Name="CP_Button4" Click="Button_Click" FontSize="10" Style="{StaticResource AccentButtonStyle}" Content="キャンセル" />
								</StackPanel>

							</StackPanel>
						</Flyout>
					</FlyoutBase.AttachedFlyout>
				</Button>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>


<!-- EOF -->
